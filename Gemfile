source 'http://rubygems.org'

gem 'rails', '3.1.0.rc5'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

#database
gem 'sqlite3'
#arel 2.1.5 bug
gem 'arel', '2.1.4'

#server push
#gem 'faye'

#haml
gem 'haml-rails'
