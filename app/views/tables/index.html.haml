- content_for :sidebar do
  = render :partial => 'shared/sidebar'

#tables
  -@tables.each do |table|
    = div_for(table, :class => "#{table.user ? 'occupied' : 'free'}", :data => {:id => table.id, :waiter_id => table.user_id}) do
      %h1= table.number
      %p.waiter_username= table.user.username if table.user
      %p.waiter_first_name= table.user.first_name if table.user
      %p.waiter_last_name= table.user.last_name if table.user
      %button.free_table Libera

#waiters
  %table
    - @waiters.each do |waiter|
      = div_for(waiter, :data => {:id => waiter.id}) do
        %p
          %span#waiter_name="#{waiter.username} (#{waiter.first_name} #{waiter.last_name}): "
          %span#table_count=waiter.count_tables