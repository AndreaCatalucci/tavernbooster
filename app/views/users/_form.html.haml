= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        #{pluralize(@user.errors.count, "error")} prohibited this user from being saved:

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :avatar
    %br/
    = f.file_field :avatar
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  .field
    = f.label :role
    %br/
    = select("user", "role_id", Role.all.map {|r| [r.name.capitalize, r.id]}, {:include_blank => false})
  .actions
    = f.submit
