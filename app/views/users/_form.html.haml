= form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2
        #{pluralize(user.errors.count, "error")} prohibited this user from being saved:

      %ul
        - user.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :username
    .input
      = f.text_field :username
  .clearfix
    = f.label :first_name
    .input
      = f.text_field :first_name
  .clearfix
    = f.label :last_name
    .input
      = f.text_field :last_name
  .clearfix
    = f.label :avatar
    .input
      = f.file_field :avatar
  .clearfix
    = f.label :password
    .input
      = f.password_field :password
  .clearfix
    = f.label :password_confirmation
    .input
      = f.password_field :password_confirmation
  .clearfix
    = f.label :role
    .input
      = select("user", "role_id", roles, {:include_blank => false})
  .actions
    = f.submit "Create", :class => 'btn primary'
