= form_for(@course) do |f|
  - if @course.errors.any?
    #error_explanation
      %h2 #{pluralize(@course.errors.count, "error")} prohibited this course from being saved:

      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg
  .clearfix	  
    =f.label 'Nome'
    .input  
      =f.text_field :name
  .clearfix
    =f.label 'Prezzo'
      .input
        =f.text_field :price
  .clearfix
    =f.label 'Tipo'
    .input
      =select("course", "course_type_id", CourseType.all.map {|c| [c.name.capitalize, c.id]}, {:include_blank => false})
  .clearfix
    =f.label 'Immagine'
      .input
        =f.file_field :image
  .actions
    = f.submit
